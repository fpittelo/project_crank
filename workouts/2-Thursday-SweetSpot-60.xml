<workout_file>
    <author>COACH</author>
    <name>2-Thursday-SweetSpot-60</name>
    <description>Total duration: 60 minutes. This session is designed to improve muscular endurance and raise your FTP by working at "Sweet Spot". Based on FTP of 228W.</description>
    <sportType>bike</sportType>
    <tags>
        <tag name="SWEETSPOT"/>
    </tags>
    <workout>
        <Warmup Duration="420" PowerLow="0.37" PowerHigh="0.70">
            <textevent timeoffset="0" message="Let's begin the 7-minute warm-up ramp."/>
            <textevent timeoffset="410" message="Get ready for the activators."/>
        </Warmup>
        <IntervalsT Repeat="3" OnDuration="30" OnPower="0.55" OffDuration="30" OffPower="1.01">
            <textevent timeoffset="0" message="Activators: 30 seconds easy, 30 seconds at FTP."/>
            <textevent timeoffset="170" message="Activators complete. Main set is next."/>
        </IntervalsT>
        <SteadyState Duration="1200" Power="0.90">
            <textevent timeoffset="0" message="Interval 1 of 2. 20 minutes at 205W. Settle in, this is a sustained effort."/>
            <textevent timeoffset="600" message="Halfway through this interval."/>
            <textevent timeoffset="1190" message="Almost there..."/>
        </SteadyState>
        <SteadyState Duration="300" Power="0.55">
            <textevent timeoffset="0" message="Great work. 5 minutes of recovery. Spin the legs."/>
        </SteadyState>
        <SteadyState Duration="1200" Power="0.90">
            <textevent timeoffset="0" message="Interval 2 of 2. Last big effort. 20 minutes."/>
            <textevent timeoffset="600" message="10 minutes to go. You've got this."/>
            <textevent timeoffset="1190" message="Finish it strong!"/>
        </SteadyState>
        <Cooldown Duration="300" PowerLow="0.55" PowerHigh="0.37">
            <textevent timeoffset="0" message="Cool-down. Let your heart rate come down gradually."/>
            <textevent timeoffset="290" message="Workout complete. Well done."/>
        </Cooldown>
    </workout>
</workout_file>
