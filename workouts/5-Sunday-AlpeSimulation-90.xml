<workout_file>
    <author>COACH</author>
    <name>5-Sunday-AlpeSimulation-90</name>
    <description>Total duration: 90 minutes. Alpe du Zwift Simulator. Sustained climbing attempts to build mental toughness and power. Based on FTP of 228W.</description>
    <sportType>bike</sportType>
    <tags>
        <tag name="CLIMBING"/>
        <tag name="TEMPO"/>
    </tags>
    <workout>
        <Warmup Duration="420" PowerLow="0.37" PowerHigh="0.70">
            <textevent timeoffset="0" message="Let's begin the 7-minute warm-up ramp."/>
            <textevent timeoffset="410" message="Get ready for the activators."/>
        </Warmup>
        <IntervalsT Repeat="3" OnDuration="30" OnPower="0.55" OffDuration="30" OffPower="1.01">
            <textevent timeoffset="0" message="Activators: 30 seconds easy, 30 seconds at FTP."/>
            <textevent timeoffset="170" message="Activators complete. Main set is next."/>
        </IntervalsT>
        <SteadyState Duration="600" Power="0.75">
            <textevent timeoffset="0" message="Build Tempo. 10 minutes at 170W."/>
            <textevent timeoffset="590" message="Get ready for the first climb."/>
        </SteadyState>
        <SteadyState Duration="900" Power="0.92">
            <textevent timeoffset="0" message="Climb Set 1: 15 minutes at 210W. Sub-Threshold."/>
            <textevent timeoffset="450" message="Halfway up this section. Keep pushing."/>
        </SteadyState>
        <SteadyState Duration="300" Power="0.55">
            <textevent timeoffset="0" message="Descend/Recovery: 5 minutes at 125W."/>
        </SteadyState>
        <SteadyState Duration="900" Power="0.92">
            <textevent timeoffset="0" message="Climb Set 2: 15 minutes at 210W. Imagine the hairpins."/>
            <textevent timeoffset="450" message="Stay in the rhythm."/>
        </SteadyState>
        <SteadyState Duration="300" Power="0.55">
            <textevent timeoffset="0" message="Descend/Recovery: 5 minutes at 125W."/>
        </SteadyState>
        <SteadyState Duration="900" Power="0.92">
            <textevent timeoffset="0" message="Climb Set 3: 15 minutes at 210W. Final push to the summit!"/>
            <textevent timeoffset="890" message="Top of the mountain!"/>
        </SteadyState>
        <Cooldown Duration="900" PowerLow="0.55" PowerHigh="0.37">
            <textevent timeoffset="0" message="Long cool-down. 15 minutes to recover."/>
            <textevent timeoffset="890" message="Workout complete. You conquered the Alpe simulation!"/>
        </Cooldown>
    </workout>
</workout_file>
